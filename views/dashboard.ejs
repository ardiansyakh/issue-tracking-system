<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <title>Dashboard</title>
</head>

<body>
    <div id="container" style="width:100%; height:400px;"></div>
    <a class="w3-button w3-blue" href="/"><i class="fa fa-undo"></i>
        BACK</a>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const chart = Highcharts.chart('container', {
                chart: {
                    type: 'bar'
                },
                title: {
                    text: 'Jumlah Issue per Employee'
                    //'Jumlah Issue per Employee'
                },
                xAxis: {
                    //categories: ['Apples', 'Bananas', 'Oranges']
                    categories: ['<%- category[0] %>', '<%= category[1] %>', '<%= category[2] %>', '<%- category[3] %>',
                        '<%= category[4] %>', '<%= category[5] %>', '<%= category[6] %>', '<%= category[7] %>']
                    //categories: <%= JSON.stringify(category) %>
                },
                yAxis: {
                    title: {
                        text: ''
                    }
                },
                series: [{
                    name: 'Jumlah Issue',
                    //data: [1, 0, 4]
                    data: <%= JSON.stringify(issueCount) %>
                    //['<%- issueCount[0] %>', <%= issueCount[1] %>, <%= issueCount[2] %>]
                }//, {
                    //     name: 'John',
                    //     data: [5, 7, 3]
                    // }
                ]
            });
        });

    </script>

    <script type="text/javascript" src="/js/themes/gray.js"></script>
</body>

</html>