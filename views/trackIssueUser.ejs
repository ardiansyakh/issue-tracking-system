    <!-- Main Content -->
    <div class="w3-container w3-light-grey" style="padding:128px 16px" id="student">
        <h3 class="w3-center"> TRACK YOUR TICKET </h3>
        <br>

        <div class="container">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <% if(notif) { %>
                        <div class="alert alert-success" role="alert">
                            <%= notif %>
                        </div>
                        <% } %>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10">
                    <form action="/issues/issueUser/track" method="post">

                        <div class="form-group row">
                            <label for="issue_user_client_email" class="col-sm-2 col-form-label">Contact
                                Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" name="issue_user_client_email"
                                    id="issue_user_client_email" placeholder="Input your email address" required>
                            </div>
                        </div>

                        <a class="w3-button w3-blue" href="/"><i class="fa fa-undo"></i>
                            BACK</a>
                        <button class="w3-button w3-green" type="submit">
                            <i class="fa fa-paper-plane"></i> SUBMIT
                        </button>

                    </form>

                    <br>
                </div>
                <div class="col-1"> </div>
            </div>
        </div>
    </div>


