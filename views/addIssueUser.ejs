<body id="top_page">

    <%- include('nav') %>

    <!-- Main Content -->
    <div class="w3-container w3-light-grey" style="padding:128px 16px" id="student">
        <h3 class="w3-center"> OPEN NEW TICKET </h3>
        <br>

        <div class="container">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                    <% if(notif) { %>
                        <div class="alert alert-success" role="alert">
                            <%= notif %>
                        </div>
                        <% } %>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10">
                    <form action="/issues/issueUser/add" method="post" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label for="issue_user_client_name" class="col-sm-2 col-form-label">Contact
                                Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="issue_user_client_name"
                                    placeholder="Input your name" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="issue_user_client_email" class="col-sm-2 col-form-label">Contact
                                Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" name="issue_user_client_email"
                                    id="issue_user_client_email" placeholder="Input your email address" required>
                            </div>
                        </div>
                        <hr>
                        <hr>
                        <div class="form-group row">
                            <label for="issue_subject" class="col-sm-2 col-form-label">Subject</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="issue_subject" id="issue_subject"
                                    placeholder="Input issue subject" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="issue_category" class="col-sm-2 col-form-label">Category</label>
                            <div class="col-sm-10">
                                <select name="issue_category" id="issue_category" class="form-control">
                                    <option default selected>--Select Category--</option>
                                    <% category.forEach(el=> {%>
                                        <option value="<%= el.id %>">
                                            <%= el.category_name %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="issue_desc" class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <textarea rows="10" cols="50" class="form-control" name="issue_desc" id="issue_desc"
                                    placeholder="Input detail of the problem encountered" required>   </textarea>
                            </div>
                        </div>
                        <!-- <div class="input-group">
                            <label for='files'>Select files</label>
                            <input id='files' name="files" type="file">
                        </div> -->
                        <!-- <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                        </div> -->

                        <div class="file-field input-field">
                            <div class="btn grey">
                                <span>File</span>
                                <input name="myFile" type="file">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                        <a class="w3-button w3-blue" href="/"><i class="fa fa-undo"></i>
                            BACK</a>
                        <button class="w3-button w3-green" type="submit">
                            <i class="fa fa-paper-plane"></i> SUBMIT
                        </button>
                        </p>
                    </form>

                    <br>

                    <img src="<%= typeof file !='undefined' ? file : '' %>" class="responsive-img">
                </div>
                <div class="col-1"> </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="w3-center w3-black w3-padding-16">
        <a href="#top_page" class="w3-button w3-light-grey"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a>
        <div class="w3-xlarge w3-section">
