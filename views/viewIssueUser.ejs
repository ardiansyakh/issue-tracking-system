<body id="top_page">
    <%- include('nav') %>
    <!-- Main Content -->
    <div class="w3-container w3-light-grey" style="padding:128px 16px" id="student">
        <h3 class="w3-center"> VIEW ISSUE </h3>
        <br>

        <div class="container">
            <div class="row">

                <div class="col-12">

                    <div class="form-group row">
                        <label for="issue_user_client_name" class="col-sm-4 col-form-label">Contact
                            Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="issue_user_client_name"
                                value=" <%= data.issue_user_client_name %>" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="issue_user_client_email" class="col-sm-4 col-form-label">Contact
                            Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" name="issue_user_client_email"
                                id="issue_user_client_email" value=" <%= data.issue_user_client_email %>" disabled>
                        </div>
                    </div>
                    <hr>
                    <hr>

                    <div class="form-group row">
                        <label for="issue_category" class="col-sm-4 col-form-label">Category</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="issue_category" id="issue_category"
                                value="<%= data.category.category_name %>" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="issue_status" class="col-sm-4 col-form-label">Status</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="issue_status" id="issue_status"
                                value="<%= data.issue_status %>" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="issue_employee" class="col-sm-4 col-form-label">CS Assigned</label>
                        <div class="col-sm-8">
                            <% data.assignments.forEach(el=> {%>
                                <input type="text" class="form-control"
                                    value="<%= el.employee.fullName %>"
                                    disabled>
                                <% }) %>
                        </div>
                    </div>

                    <hr>
                    <hr>

                    <div class="form-group row">
                        <label for="issue_subject" class="col-sm-4 col-form-label">Subject</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="issue_subject" id="issue_subject"
                                value="<%= data.issue_subject %>" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="issue_desc" class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-8">
                            <textarea rows="10" cols="50" class="form-control" name="issue_desc" id="issue_desc"
                                disabled>  <%= data.issue_desc %> </textarea>
                        </div>
                    </div>

                    <form method="get"
                        action="/issues/download/<%= data.issue_attachment_filename? data.issue_attachment_filename+'?status=found' : data.issue_attachment_filename+'?status=notfound' %>">
                        <button type="submit" class="btn grey">Download Attachement</button>
                    </form>

                    <div class="file-field input-field">
                        <!-- <div class="btn grey">
                                <span>File</span>
                                <input name="myFile" type="file">
                            </div> -->


                    </div>
                    <br>
                    <a class="w3-button w3-blue" href="/issues/IssueUser/track"><i class="fa fa-undo"></i>
                        BACK</a>

                    <br>

                    <img src="<%= typeof file !='undefined' ? file : '' %>" class="responsive-img">
                </div>

            </div>
        </div>
    </div>


    <!-- Footer -->
    <footer class="w3-center w3-black w3-padding-16">
        <a href="#top_page" class="w3-button w3-light-grey"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a>
        <div class="w3-xlarge w3-section">
